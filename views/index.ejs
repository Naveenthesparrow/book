<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Book Library</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin">Admin Upload</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="mb-4 text-center">Available Books</h1>
        
        <% if (books.length === 0) { %>
            <div class="alert alert-info text-center">No books available yet.</div>
        <% } else { %>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% books.forEach(book => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= book.title %></h5>
                                <p class="card-text text-muted small">ID: <%= book.id %></p>
                                <div class="mt-auto d-flex gap-2">
                                    <a href="/uploads/<%= book.filename %>" target="_blank" class="btn btn-primary flex-grow-1">View</a>
                                    <a href="/uploads/<%= book.filename %>" download class="btn btn-outline-secondary flex-grow-1">Download</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
